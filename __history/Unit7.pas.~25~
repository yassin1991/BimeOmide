procedure TForm7.BitBtn1Click(Sender: TObject);
begin

   PersonId := DBGridEh1.Fields[0].AsInteger;
   form4.PersonComboBox.Text := DBGridEh1.Fields[1].AsString+' '+DBGridEh1.Fields[2].AsString+' ˜Ï '+DBGridEh1.Fields[0].AsString;
