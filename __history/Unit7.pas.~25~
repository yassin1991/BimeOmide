PersonEdit.Form12.ShenasnameNumberEdit.Text:= DBGridEh1.Fields[8].AsString;
PersonEdit.Form12.fatherNameEdit.Text := DBGridEh1.Fields[9].AsString;
PersonEdit.Form12.PhoneNumberEdit.Text :=DBGridEh1.Fields[10].AsString;
form12.ShowModal;
end;


end;

